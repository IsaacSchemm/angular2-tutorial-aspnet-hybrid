@{
    ViewBag.Title = "Angular2 Demo";
}

<div class="jumbotron">
    <p class="lead">This is the Angular tutorial (through part 4) running on ASP.NET 4.</p>
    <p class="lead">Libraries (Angular2, etc.) and compiled .js files were copied from the other project when this one was built.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <my-app>Loading...</my-app>
    </div>
</div>

@section Scripts {
    <base href="/" />
    <!-- 1. Load libraries -->
    <!-- IE required polyfills, in this exact order -->
    <script src="/app/es6-shim.min.js"></script>
    <script src="/app/system-polyfills.js"></script>
    <script src="/app/shims_for_IE.js"></script>
    <script src="/app/angular2-polyfills.js"></script>
    <script src="/app/system.src.js"></script>
    <script src="/app/Rx.js"></script>
    <script src="/app/angular2.dev.js"></script>
    <script src="/app/http.dev.js"></script>
    <script src="/app/router.js"></script>
    <!-- 2. Configure SystemJS -->
    <script>
        System.config({
          packages: {
            app: {
                format: 'register',
                defaultExtension: 'js'
            }
          }
        });
        System.import('app/main').then(
          null, console.error.bind(console));
    </script>
}